{
  "name": "ecommerce-store",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "overrides": {
      "@auth/core": "0.41.1"
    }
  },
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --filter @ecommerce/web dev",
    "build": "pnpm --filter @ecommerce/web build",
    "type-check": "pnpm -r --parallel type-check",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,mjs,ts,tsx,css,md,json}\"",
    "db:generate": "pnpm --filter @ecommerce/database db:generate",
    "db:push": "pnpm --filter @ecommerce/database db:push",
    "db:migrate": "pnpm --filter @ecommerce/database db:migrate",
    "db:studio": "pnpm --filter @ecommerce/database db:studio",
    "infra:up": "pnpm --filter @ecommerce/infra up",
    "infra:preview": "pnpm --filter @ecommerce/infra preview"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "eslint": "9.39.2",
    "globals": "^17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript-eslint": "8.54.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx,css,md,json}": [
      "prettier --write"
    ],
    "*.{js,mjs,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
