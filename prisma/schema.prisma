generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  email            String?    @unique
  emailVerified    DateTime?
  image            String?
  stripeCustomerId String?    @unique
  accounts         Account[]
  roles            UserRole[] @default([USER])
  // Customer contact information
  phone            String? // Primary phone number
  defaultShipping  Json? // Default shipping address
  defaultBilling   Json? // Default billing address

  carts   Cart[]
  orders  Order[]
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade) // Cascade: Delete accounts when user deleted

  @@unique([provider, providerAccountId])
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

model Category {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String  @unique
  description String?
  image       String?
  parentId    String? @db.ObjectId
  sortOrder   Int     @default(0)
  active      Boolean @default(true)

  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction) // NoAction: Prevent deleting parent with children
  children Category[] @relation("CategoryHierarchy")
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
  @@index([active])
  @@index([sortOrder])
  @@map("categories")
}

model Product {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String?
  images          String[]
  stripeProductId String?   @unique
  metadata        Json?
  deletedAt       DateTime? // Soft delete: null = active, set = deleted
  lastModifiedBy  String?   @db.ObjectId // User ID of last modifier
  // Inventory tracking
  trackInventory  Boolean   @default(false) // Whether to track stock for this product
  stockQuantity   Int?      @default(0) // Current stock level (null if not tracking)
  lowStockAlert   Int?      @default(5) // Threshold for low stock alerts
  // Category
  categoryId      String?   @db.ObjectId

  category              Category?              @relation(fields: [categoryId], references: [id], onDelete: SetNull) // SetNull: Keep product if category deleted
  prices                Price[]
  orderItems            OrderItem[]
  cartItems             CartItem[]
  inventoryTransactions InventoryTransaction[]
  reviews               Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([deletedAt])
  @@index([deletedAt, createdAt])
  @@index([categoryId])
  @@index([deletedAt, categoryId, createdAt]) // Optimized for product listing queries
  @@map("products")
}

model Price {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  productId       String    @db.ObjectId
  currency        String    @default("usd")
  unitAmount      Int // Amount in cents
  type            PriceType @default(ONE_TIME)
  interval        String? // For recurring: day, week, month, year
  intervalCount   Int? // For recurring: billing frequency
  trialPeriodDays Int?
  stripePriceId   String?   @unique
  metadata        Json?
  deletedAt       DateTime? // Soft delete: null = active, set = deleted
  effectiveFrom   DateTime  @default(now()) // When this price becomes effective
  effectiveTo     DateTime? // When this price expires (null = currently effective)

  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade) // Cascade: Delete prices when product deleted
  orderItems OrderItem[]
  cartItems  CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([deletedAt])
  @@index([productId, deletedAt])
  @@index([productId, effectiveFrom]) // For price history queries
  @@index([productId, effectiveTo]) // For finding current prices
  @@map("prices")
}

enum PriceType {
  ONE_TIME
  RECURRING
}

enum CartStatus {
  ACTIVE
  CHECKED_OUT
  EXPIRED
}

model Cart {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  userId         String?    @db.ObjectId
  sessionId      String?    @unique
  status         CartStatus @default(ACTIVE)
  expiresAt      DateTime? // For guest cart TTL
  lastActivityAt DateTime   @default(now())

  user  User?      @relation(fields: [userId], references: [id], onDelete: Cascade) // Cascade: Delete cart when user deleted
  items CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([expiresAt, status])
  @@index([lastActivityAt])
  @@map("carts")
}

model CartItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String @db.ObjectId
  productId String @db.ObjectId
  priceId   String @db.ObjectId
  quantity  Int    @default(1)

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade) // Cascade: Delete items when cart deleted
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade) // Cascade: Delete items when product deleted
  price   Price   @relation(fields: [priceId], references: [id], onDelete: Cascade) // Cascade: Delete items when price deleted

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId, priceId])
  @@index([cartId])
  @@index([productId])
  @@index([priceId])
  @@map("cart_items")
}

model Order {
  id                      String            @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber             String            @unique
  userId                  String?           @db.ObjectId
  customerEmail           String?
  customerName            String?
  customerPhone           String?
  stripeCheckoutSessionId String?           @unique
  stripePaymentIntentId   String?           @unique
  status                  OrderStatus       @default(PENDING)
  paymentStatus           PaymentStatus     @default(unpaid)
  fulfillmentStatus       FulfillmentStatus @default(unfulfilled)
  currency                String            @default("usd")
  subtotal                Int // Amount in cents
  tax                     Int? // Amount in cents
  total                   Int // Amount in cents
  refundedAmount          Int? // Amount in cents
  refundReason            String?
  shippingAddress         Json?
  billingAddress          Json?
  metadata                Json?
  lastModifiedBy          String?           @db.ObjectId // User ID of last modifier

  user    User?       @relation(fields: [userId], references: [id], onDelete: SetNull) // SetNull: Keep order history if user deleted
  items   OrderItem[]
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
  @@index([status, createdAt])
  @@index([createdAt, orderNumber]) // For chronological display with order numbers
  @@map("orders")
}

model OrderItem {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  orderId    String @db.ObjectId
  productId  String @db.ObjectId
  priceId    String @db.ObjectId
  quantity   Int
  unitAmount Int // Amount in cents at time of purchase

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade) // Cascade: Delete items when order deleted
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict) // Restrict: Prevent product deletion if in orders
  price   Price   @relation(fields: [priceId], references: [id], onDelete: Restrict) // Restrict: Prevent price deletion if in orders

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@index([priceId])
  @@map("order_items")
}

model Review {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  productId   String  @db.ObjectId
  userId      String  @db.ObjectId
  orderId     String  @db.ObjectId
  rating      Int // 1-5 star rating
  title       String?
  content     String?
  verified    Boolean @default(false) // Verified purchase
  helpful     Int     @default(0) // Number of helpful votes
  reported    Boolean @default(false) // Flagged for moderation
  published   Boolean @default(true) // Published status
  moderatedBy String? @db.ObjectId // Admin who moderated

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade) // Cascade: Delete reviews when product deleted
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade) // Cascade: Delete reviews when user deleted
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade) // Cascade: Delete reviews when order deleted

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId, orderId]) // One review per user per product per order
  @@index([productId])
  @@index([productId, published, verified]) // For displaying verified reviews
  @@index([userId])
  @@index([orderId])
  @@index([rating])
  @@index([reported])
  @@map("reviews")
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
  PARTIALLY_REFUNDED
}

// Stripe Checkout Session payment_status values
enum PaymentStatus {
  paid // Payment successful
  unpaid // Payment not yet completed
  no_payment_required // No payment needed (e.g., free order)
}

// Internal fulfillment tracking
enum FulfillmentStatus {
  unfulfilled // Order not yet processed
  fulfilled // Order packed/ready
  shipped // Order shipped
  delivered // Order delivered
  returned // Order returned
}

model InventoryTransaction {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  quantity  Int // Positive for addition, negative for sale/removal
  type      String // SALE, RESTOCK, ADJUSTMENT, RETURN, INITIAL
  orderId   String? @db.ObjectId
  notes     String?
  createdBy String? @db.ObjectId // User ID who created this transaction

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade) // Cascade: Delete transactions when product deleted

  createdAt DateTime @default(now())

  @@index([productId])
  @@index([productId, createdAt])
  @@index([type])
  @@index([orderId])
  @@map("inventory_transactions")
}

model WebhookEvent {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  stripeEventId   String    @unique
  type            String
  data            Json
  processed       Boolean   @default(false)
  processingError String?
  retryCount      Int       @default(0)
  lastAttemptAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([processed])
  @@index([type])
  @@index([createdAt])
  @@index([createdAt, processed]) // For cleanup queries
  @@index([processed, retryCount]) // For retry processing
  @@map("webhook_events")
}
