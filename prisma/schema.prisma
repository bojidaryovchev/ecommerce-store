generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  email            String?    @unique
  emailVerified    DateTime?
  image            String?
  stripeCustomerId String?    @unique
  accounts         Account[]
  roles            UserRole[] @default([USER])

  carts  Cart[]
  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

model Product {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String?
  images          String[]
  active          Boolean   @default(true)
  stripeProductId String?   @unique
  metadata        Json?
  deletedAt       DateTime?
  lastModifiedBy  String?   @db.ObjectId // User ID of last modifier

  prices     Price[]
  orderItems OrderItem[]
  cartItems  CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([active])
  @@index([deletedAt])
  @@map("products")
}

model Price {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  productId       String    @db.ObjectId
  active          Boolean   @default(true)
  currency        String    @default("usd")
  unitAmount      Int // Amount in cents
  type            PriceType @default(ONE_TIME)
  interval        String? // For recurring: day, week, month, year
  intervalCount   Int? // For recurring: billing frequency
  trialPeriodDays Int?
  stripePriceId   String?   @unique
  metadata        Json?
  deletedAt       DateTime?

  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
  cartItems  CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([active])
  @@index([deletedAt])
  @@map("prices")
}

enum PriceType {
  ONE_TIME
  RECURRING
}

enum CartStatus {
  ACTIVE
  CHECKED_OUT
  EXPIRED
}

model Cart {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  userId         String?    @db.ObjectId
  sessionId      String?    @unique
  status         CartStatus @default(ACTIVE)
  expiresAt      DateTime? // For guest cart TTL
  lastActivityAt DateTime   @default(now())

  user  User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([expiresAt, status])
  @@index([lastActivityAt])
  @@map("carts")
}

model CartItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String @db.ObjectId
  productId String @db.ObjectId
  priceId   String @db.ObjectId
  quantity  Int    @default(1)

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  price   Price   @relation(fields: [priceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId, priceId])
  @@index([cartId])
  @@index([productId])
  @@index([priceId])
  @@map("cart_items")
}

model Order {
  id                      String            @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber             String            @unique
  userId                  String?           @db.ObjectId
  customerEmail           String?
  customerName            String?
  customerPhone           String?
  stripeCheckoutSessionId String?           @unique
  stripePaymentIntentId   String?           @unique
  status                  OrderStatus       @default(PENDING)
  paymentStatus           PaymentStatus     @default(PENDING)
  fulfillmentStatus       FulfillmentStatus @default(UNFULFILLED)
  currency                String            @default("usd")
  subtotal                Int // Amount in cents
  tax                     Int? // Amount in cents
  total                   Int // Amount in cents
  refundedAmount          Int? // Amount in cents
  refundReason            String?
  shippingAddress         Json?
  billingAddress          Json?
  metadata                Json?
  lastModifiedBy          String?           @db.ObjectId // User ID of last modifier

  user  User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
  @@index([status, createdAt])
  @@map("orders")
}

model OrderItem {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  orderId    String @db.ObjectId
  productId  String @db.ObjectId
  priceId    String @db.ObjectId
  quantity   Int
  unitAmount Int // Amount in cents at time of purchase

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  price   Price   @relation(fields: [priceId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@index([priceId])
  @@map("order_items")
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
  REQUIRES_PAYMENT_METHOD
  REQUIRES_CONFIRMATION
  REQUIRES_ACTION
  CANCELED
}

enum FulfillmentStatus {
  UNFULFILLED
  FULFILLED
  SHIPPED
  DELIVERED
  RETURNED
}

model WebhookEvent {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  stripeEventId   String    @unique
  type            String
  data            Json
  processed       Boolean   @default(false)
  processingError String?
  retryCount      Int       @default(0)
  lastAttemptAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([processed])
  @@index([type])
  @@index([createdAt])
  @@map("webhook_events")
}
